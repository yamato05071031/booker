

<h1>Books</h1>

<table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>


<% @books.each do |book| %>
        <tbody>
          <tr>


            <td><%= book.title  %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" }  %></td>

          </tr>
        </tbody>
        <% end %>
</table>
        </div>


